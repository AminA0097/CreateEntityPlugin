<idea-plugin>
    <id>com.frequence.CreateEntity</id>
    <name>Create Entity Utility</name>
    <vendor email="contact@frequence.com" url="https://www.frequence.com">Frequence Team</vendor>
    <description><![CDATA[
        This plugin helps you quickly create Spring Entity classes from the project view context menu.
    ]]></description>
    <change-notes>
        <![CDATA[
        <h3>What's New in 1146</h3>
        <ul>
<!--
            <li>🐞 Fixed bug when creating entities</li>

        </ul>
        ]]>
    </change-notes>
    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup displayType="BALLOON"
                           id="CreateEntity Notification Group"
                           isLogByDefault="true"/>
    </extensions>
    <actions>
        <action id="CreateEntity"
                class="com.plugin.CreateEntity"
                text="Create Entity"
                description="Generate a Spring Entity class in the selected folder">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="first"/>
        </action>
    </actions>

    <depends>com.intellij.modules.platform</depends>

</idea-plugin>
